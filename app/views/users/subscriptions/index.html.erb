<div id="alert" style="display: none;">
</div>
<div id="content-container" class="custom-background">
  <div id="content">
    <%= render :partial => "/share/new/header", :locals => { :user => @current_user } -%>
    <table class="content-table" cellspacing="0">
      <tr>
        <td class="main">
          <ul id="main-navigation">
            <li>
              <%= link_to "Go to #{@possesive_username} profile &rArr;", profile_path, :class => "navigation-link" -%>
            </li>
          </ul>
          <h1 class="subtitled">Subscriptions</h1>
          <span class="subtitle"><%= @user.username -%></span>
          <div class="showing">
            Showing <%= @num_first_subscription -%>-<%= @num_last_subscription -%> of <%= @num_paginated_subscriptions -%> subscriptions...
          </div>
          <ol id="users">
<% for subscription in @paginated_subscriptions -%>
            <%= render :partial => "/share/new/user", :locals => { :user => subscription } -%>
<% end -%>
          </ol>
<% if @num_paginated_subscriptions > 0 -%>
          <div class="pagination">
  <%- if !@previous_page.nil? -%>
            <%= link_to "&lArr; Back", user_subscriptions_permalink_path(:page => @previous_page, :id => @id), :class => "back navigation-link" %>
  <%- end -%>
            <%= @num_first_subscription -%>-<%= @num_last_subscription -%> of <%= @num_paginated_subscriptions -%>
  <%- if !@next_page.nil? -%>
            <%= link_to "Next &rArr;", user_subscriptions_permalink_path(:page => @next_page, :id => @id), :class => "next navigation-link" %>
  <%- end -%>
          </div>
<% end -%>
        </td>
        <td class="side">
          <%= render :partial => "/share/new/user_side_info", :locals => { :user => @user, :current_user => @current_user, :num_blogcasts => @num_blogcasts, :num_subscriptions => @num_subscriptions, :num_subscribers => @num_subscribers, :subscription => @subscription } -%>
        </td>
      </tr>
    </table>
    <%= render :partial => "/share/new/content_footer" -%>
  </div>
</div>
