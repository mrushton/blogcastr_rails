<div id="wrapper">
  <%= render :partial => "/share/header_small", :locals => {:home_selected => true} -%>
  <div id="content" class="one-column wide">
    <div id="main">
      <div class="top-border-large-indent-white-squared first">
      </div>
      <div class="background">
        <div id="title" class="small">
          <div class="side-border">
            <div class="upper-left-border-squared-corner-gray">
            </div>
            <div class="left-border-gray">
            </div>
            <div class="lower-left-border-squared-corner-gray">
            </div>
          </div>
          <h1 class="image"><%= link_to image_tag(@user.setting.avatar.url(:medium), :class => "avatar"), profile_path(:username => @user.username) -%><%= @user_username_possesive -%> home</h1>
          <div class="side-border">
            <div class="upper-right-border-squared-corner-gray">
            </div>
            <div class="right-border-gray">
            </div>
            <div class="lower-right-border-squared-corner-gray">
            </div>
          </div>
        </div>
        <div id="left">
          <h2 class="first">New blogcast</h2>
          <div class="quick">
            <div class="detail">Quick start...</div>
            <% form_for @blogcast, :url => blogcasts_path do |form| %>
              <%= form.error_messages %>
              <table>
                <tr>
                  <td>
                    <%= form.label :title, "Title" %>
                  </td>
                  <td>
                    <%= form.text_field :title %>
                  </td>
                </tr>
                <tr>
                  <td></td>
                  <td>
                    <%= form.submit 'Create' %>
                  </td>
                </tr>
              </table>
            <% end %>
          </div>
          <div class="divider">
            <div class="line">
            </div>
            <div class="or">
              Or
            </div>
            <div class="line">
            </div>
          </div>
          <div class="create">
            <%= link_to "New blogcast!", new_blogcast_path, :class => "button" -%> 
          </div>
          <div class="clear">
          </div>
          <h2>Upcoming blogcasts</h2>
          <ol class="blogcasts">
<% i = @upcoming_blogcasts.length -%>
<% for blogcast in @upcoming_blogcasts -%>
            <%= render :partial => "/share/blogcast_small", :locals => {:blogcast => blogcast, :show_controls => true, :i => i - 1} -%>
  <%- i = i - 1 -%>
<% end -%>
          </ol>
          <h2>Recent blogcasts</h2>
          <ol class="blogcasts">
<% i = @recent_blogcasts.length -%>
<% for blogcast in @recent_blogcasts -%>
            <%= render :partial => "/share/blogcast_small", :locals => {:blogcast => blogcast, :show_controls => true, :i => i - 1} -%>
  <%- i = i - 1 -%>
<% end -%>
          </ol>
          <h2>Upcoming subscription blogcasts</h2>
          <ol class="blogcasts">
<% i = @upcoming_subscription_blogcasts.length -%>
<% for blogcast in @upcoming_subscription_blogcasts -%>
            <%= render :partial => "/share/blogcast_large", :locals => {:blogcast => blogcast, show_user => true, :i => i - 1} -%>
  <%- i = i - 1 -%>
<% end -%>
          </ol>
          <h2>Recent Subscription blogcasts</h3>
          <ol class="blogcasts">
<% i = @recent_subscription_blogcasts.length -%>
<% for blogcast in @recent_subscription_blogcasts -%>
            <%= render :partial => "/share/blogcast_large", :locals => {:blogcast => blogcast, show_user => true, :i => i - 1} -%>
  <%- i = i - 1 -%>
<% end -%>
          </ol>
        </div>
        <%= render :partial => "/share/site/right", :locals => {:home_selected => true} -%>
        <div class="clear">
        </div>
      </div>
      <div class="bottom-border-large-indent-white-squared first">
      </div>
    </div>
  </div>
  <%= render :partial => "/share/footer_small" -%>
</div>
