<%- user = image_post.user -%>
<li id="ImagePost:<%= image_post.id -%>" class="item">
  <div>
    <div class="item-header">
      <span class="timestamp-in-words" timestamp="<%= image_post.created_at.to_i.to_s -%>" ><%= timestamp_in_words_helper image_post.created_at -%></span>
    </div>
    <div class="item-body">
      <div class="clearfix">
        <%= link_to image_tag(user.setting.avatar(:small), :class => "small-avatar"), profile_path(:username => user.username) -%>
        <div class="post-info">
          <div class="username">
            <%= link_to user.username, profile_path(:username => user.username), :class => "username" -%>
          </div>
          <%= image_tag image_post.image.url(:default), :class => "image" %>
<%- if !image_post.text.blank? -%>
          <p class="caption">
            <%= image_post.text -%>
          </p>
<%- end -%>
        </div>
      </div>
    </div>
  </div>
</li>
