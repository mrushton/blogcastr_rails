<div id="wrapper">
  <%= render :partial => "/share/header_small" -%>
  <div id="content" class="one-column wide">
    <div id="main">
      <div class="top-border-large-indent-white-squared first">
      </div>
      <div class="background">
        <div id="title" class="small">
          <div class="side-border">
            <div class="upper-left-border-squared-corner-gray">
            </div>
            <div class="left-border-gray">
            </div>
            <div class="lower-left-border-squared-corner-gray">
            </div>
          </div>
          <h1 class="image"><%= link_to image_tag(@user.setting.avatar.url(:medium), :class => "avatar"), profile_path(:username => @user.username) -%>New blogcast</h1>
          <div class="side-border">
            <div class="upper-right-border-squared-corner-gray">
            </div>
            <div class="right-border-gray">
            </div>
            <div class="lower-right-border-squared-corner-gray">
            </div>
          </div>
        </div>
        <% form_for @blogcast, :url => create_blogcast_path do |form| %>
          <%= form.error_messages %>
          <div id="left" class="blogcast-form">
            <%= form.label :title, "Title" %>
            <%= form.text_field :title %>
            <label for="starting_at">Starting At</label> 
            <%= form.date_select :starting_at, :start_year => @blogcast.starting_at.year, :end_year => @blogcast.starting_at.year + 1, :use_short_month => true, :order => [ :month, :day, :year ] %>
            <%= image_tag "date.png", :class => "icon", :onclick => "blogcastrToggleHidden('calendar', 'inline'); blogcastrStopHideCalendar(event);" -%>
            <div id="calendar" style="display: none;">
            </div>
            <%= select_hour_helper @blogcast.starting_at, "blogcast_starting_at_12_hour_clock_hour" %>
            <%= hidden_field_tag "blogcast[starting_at(4i)]", @blogcast.starting_at.hour, :id => "blogcast_starting_at_4i" %>
            <%= select_minute @blogcast.starting_at, :field_name => "starting_at(5i)", :prefix => "blogcast" %>
            <%= select_12_hour_clock_period_helper @blogcast.starting_at, "blogcast_starting_at_12_hour_clock_period" %>
            <%= form.label :description, "Description" %>
            <%= form.text_area :description %>
          </div>
          <div id="right" class="blogcast-form">
            <label for="tags">Tags</label> 
            <%= text_field_tag "tags" %>
            <%= form.label :link_title, "Link title" %>
            <%= form.text_field :link_title %>
          </div>
          <div class="clear">
          </div>
          <%= form.submit "Create", :class => "submit" %>
        <% end %>
      </div>
    </div>
    <div class="bottom-border-large-indent-white-squared first">
    </div>
  </div>
  <%= render :partial => "/share/footer_small" -%>
</div>
