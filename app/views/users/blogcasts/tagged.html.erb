<div id="alert" style="display: none;">
</div>
<div id="content-container" class="custom-background">
  <div id="content">
    <%= render :partial => "/share/new/header", :locals => { :user => @current_user } -%>
    <div class="content-table" cellspacing="0">
      <div class="table-row">
        <div class="main">
          <ul id="main-navigation">
            <li>
              <%= link_to "Go to #{@possesive_username} profile &rArr;", profile_path, :class => "navigation-link" -%>
            </li>
          </ul>
          <h1 class="subtitled">Tagged/<%= @tag_name -%></h1>
          <span class="subtitle"><%= @user.username -%></span>
          <div class="showing">
            Showing <%= @num_first_blogcast -%>-<%= @num_last_blogcast -%> of <%= @num_paginated_blogcasts -%> blogcasts...
          </div>
          <ol id="blogcasts">
<% for blogcast in @paginated_blogcasts -%>
            <%= render :partial => "/share/new/blogcast", :object => blogcast -%>
<% end -%>
          </ol>
<% if @num_paginated_blogcasts > 0 -%>
          <div class="pagination">
  <%- if !@previous_page.nil? -%>
            <%= link_to "&lArr; Back", user_blogcasts_permalink_path(:page => @previous_page, :id => @id), :class => "back navigation-link" %>
  <%- end -%>
            <%= @num_first_blogcast -%>-<%= @num_last_blogcast -%> of <%= @num_paginated_blogcasts -%>
  <%- if !@next_page.nil? -%>
            <%= link_to "Next &rArr;", user_blogcasts_permalink_path(:page => @next_page, :id => @id), :class => "next navigation-link" %>
  <%- end -%>
          </div>
<% end -%>
        </div>
        <div class="side">
          <%= render :partial => "/share/new/user_side_info", :locals => { :user => @user, :current_user => @current_user, :num_blogcasts => @num_blogcasts, :num_subscriptions => @num_subscriptions, :num_subscribers => @num_subscribers, :subscription => @subscription } -%>
        </div>
      </div>
    </div>
    <%= render :partial => "/share/new/content_footer" -%>
  </div>
</div>
