<%- user = image_post.user -%>
<li id="Post:<%= image_post.id -%>" class="item">
  <div>
<%- if current_user == user -%>
    <div class="item-header settings-button-header">
      <div class="item-settings-button">
      </div>
<%- else -%>
    <div class="item-header">
<%- end -%>
      <span class="timestamp-in-words" timestamp="<%= image_post.created_at.to_i.to_s -%>" ><%= timestamp_in_words_helper image_post.created_at -%></span>
    </div>
    <div class="item-body">
<%- if current_user == user -%>
      <ul class="item-settings" style="display: none;">
        <li>
          <%= link_to_remote "Delete", :html => { :class => "destroy" }, :url => post_path(:id => image_post.id), :method => "delete", :confirm => "Sure you want to delete Post #{image_post.id}? This can't be undone.", :failure => "alert('Oops! We couldn\\'t delete Post #{image_post.id}.');" %>
        </li>
      </ul>
<%- end -%>
      <div class="clearfix">
        <%= link_to image_tag(user.setting.avatar(:small), :class => "small-avatar"), profile_path(:username => user.username) -%>
        <div class="post-info">
          <div class="username">
            <%= link_to user.username, profile_path(:username => user.username), :class => "username" -%>
          </div>
          <%= image_tag image_post.image.url(:default), :class => "image" %>
<%- if !image_post.text.blank? -%>
          <p class="caption">
            <%= image_post.text -%>
          </p>
<%- end -%>
        </div>
      </div>
    </div>
  </div>
</li>
