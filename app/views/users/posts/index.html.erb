<div id="alert" style="display: none;">
</div>
<div id="content-container">
  <div id="content">
    <%= render :partial => "/share/new/header", :locals => { :user => @current_user } -%>
    <table id="content-table" cellspacing="0">
      <tr>
        <td id="main">
          <ul id="profile-navigation">
            <li>
              <%= link_to "Go to #{@possesive_username} profile &rArr;", profile_path, :class => "navigation-link" -%>
            </li>
          </ul>
          <h1 class="subtitled">Posts</h1>
          <span class="subtitle"><%= @user.username -%></span>
          <div class="showing">
            Showing <%= @num_first_post -%>-<%= @num_last_post -%> of <%= @num_paginated_posts -%> posts...
          </div>
          <ol id="posts">
<% for post in @paginated_posts -%>
  <%- if post.instance_of?(TextPost) -%>
            <%= render :partial => "/share/new/text_post", :locals => { :text_post => post } -%>
  <%- elsif post.instance_of?(ImagePost) -%>
            <%= render :partial => "/share/new/image_post", :locals => { :image_post => post } -%>
  <%- elsif !post.instance_of?(CommentPost) -%>
            <%= render :partial => "/share/new/comment_post", :locals => { :comment_post => post } -%>
  <%- end -%>
<% end -%>
          </ol>
<% if @num_paginated_posts > 0 -%>
          <div class="pagination">
  <%- if !@previous_page.nil? -%>
            <%= link_to "&lArr; Back", user_posts_permalink_path(:page => @previous_page, :id => @id), :class => "back navigation-link" %>
  <%- end -%>
            <%= @num_first_post -%>-<%= @num_last_post -%> of <%= @num_paginated_posts -%>
  <%- if !@next_page.nil? -%>
            <%= link_to "Next &rArr;", user_posts_permalink_path(:page => @next_page, :id => @id), :class => "next navigation-link" %>
  <%- end -%>
          </div>
<% end -%>
        </td>
        <td id="side">
          <%= render :partial => "/share/new/user_side_info", :locals => { :user => @user, :current_user => @current_user, :num_blogcasts => @num_blogcasts, :num_subscriptions => @num_subscriptions, :num_subscribers => @num_subscribers, :subscription => @subscription } -%>
        </td>
      </tr>
    </table>
    <%= render :partial => "/share/new/content_footer" -%>
  </div>
</div>
